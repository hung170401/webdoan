@model IEnumerable<webdoan.Areas.Admin.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<main int id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách quyền truy cập</h2>
    </div>
    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="AdminRoles" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1"></i> Thêm tài khoản
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-3 text-center">Tên Role</th>
                                    <td class="col-2 text-center">Mô Tả</td>
                                    
                                    <th class="col-2 text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@item.RoleId</th>
                                        <td>
                                            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Details"
                                           asp-route-id="@item.RoleId" class="text-primary">@item.RoleName</a>
                                        </td>
                                        <td class="text-center">@item.Description</td>
                                        
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Details"
                                           asp-route-id="@item.RoleId" class="btn btn-primary btn-sm"
                                           title="chi tiết"><i class="ri-apps-2-line"></i></a>
                                            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit"
                                           asp-route-id="@item.RoleId" class="btn btn-primary btn-sm"
                                           title="Sửa nội dung bài viết"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete"
                                           asp-route-id="@item.RoleId" class="btn btn-danger btn-sm"
                                           title="Xóa thông tin bài viết"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </section>
</main>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
